import java.util.*;

class Item {
    String name;
    double weight, value;
    boolean divisible;

    Item(String name, double weight, double value, boolean divisible) {
        this.name = name;
        this.weight = weight;
        this.value = value;
        this.divisible = divisible;
    }
}

public class SimpleKnapsack {

    static double fractionalKnapsack(double W, List<Item> items) {
        // Sort by value/weight ratio (descending)
        items.sort((a, b) -> Double.compare(b.value / b.weight, a.value / a.weight));

        double totalValue = 0.0, currentWeight = 0.0;

        for (Item item : items) {
            if (currentWeight + item.weight <= W) {
                System.out.println("Taking full: " + item.name);
                currentWeight += item.weight;    
                totalValue += item.value;
            } else {
                double remain = W - currentWeight;
                if (remain <= 0) break;
                if (item.divisible) {
                    double fraction = remain / item.weight;
        Scanner sc = new Scanner(System.in);

        List<Item> items = Arrays.asList(
            new Item("Machinery", 10, 60, false),
            new Item("Mail bags", 20, 100, true),
            new Item("Food", 30, 120, true),
            new Item("Car", 25, 180, false),
            new Item("Grains", 15, 90, true)
        );

        System.out.print("Enter boat capacity W: ");
        double W = sc.nextDouble();

        double result = fractionalKnapsack(W, items);
        System.out.println("Maximum value in knapsack = " + result);

        sc.close();
    }                    System.out.println("Taking part of: " + item.name + " (" + remain + " kg)");
                    totalValue += item.value * fraction;
                    currentWeight += remain;
                    break;
                }
            }
        }
        return totalValue;
    }

    public static void main(String[] args) {

}


